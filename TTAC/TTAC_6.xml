			<source ref="id16"/>
			<target ref="id19"/>
			<label kind="guard" x="-120" y="-88">msg==-2</label>
		</transition>
		<transition>
			<source ref="id17"/>
			<target ref="id16"/>
			<label kind="guard" x="4" y="-10">id_signal==id</label>
			<label kind="synchronisation" x="4" y="5">msg_receive?</label>
		</transition>
		<transition>
			<source ref="id18"/>
			<target ref="id17"/>
