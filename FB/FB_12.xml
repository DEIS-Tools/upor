		<transition>
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="200" y="-64">fromLink?</label>
			<label kind="assignment" x="208" y="-40">tmrd:=0</label>
			<nail x="296" y="-40"/>
